<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Scanner" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Receipt" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="Receipt.Primary">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Receipt.Secondary">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Receipt.Secondary.Low">
        <item name="android:textColor">@color/washed</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextSecondary" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomSheetText">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomSheetText.Item">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
