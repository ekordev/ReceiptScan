<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="com.lucianbc.receiptscan.viewmodel.scanner.LiveViewVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.fragment.scanner.Scanner">

        <com.otaliastudios.cameraview.CameraView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"
                app:cameraPreview="texture"
                app:cameraAudio="off"
                app:cameraGesturePinch="zoom"
                app:cameraGestureTap="capture"
                app:cameraPlaySounds="false"
                android:id="@+id/scanner_view"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

        <com.lucianbc.receiptscan.view.fragment.scanner.widget.GraphicOverlay
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ocr_overlay"
        />

        <ImageButton
                android:src="@{!safeUnbox(viewModel.flash) ? @drawable/ic_flash_off_white_24dp : @drawable/ic_flash_on_white_24dp}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggle_flash_btn"
                android:contentDescription="@string/toggle_flash_btn"
                android:background="?android:selectableItemBackground"
                android:onClick="@{() -> viewModel.toggleFlash()}"
                android:layout_marginTop="35dp"
                android:layout_marginStart="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
