<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="receipt" type="com.lucianbc.receiptscan.domain.model.ReceiptDraftWithProducts"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
    >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/receipt_merchant_label"
                android:id="@+id/merchantLabel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/merchantTextView"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintHorizontal_weight="1"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/receipt_merchant_name_placeholder"
                android:id="@+id/merchantTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/merchantLabel"
                app:layout_constraintHorizontal_weight="2"
                android:text="@{receipt.receipt.merchantName}"
        />

        <TextView
                android:text="@string/receipt_date_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="176dp"
                android:id="@+id/dateLabel" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_weight="1" app:layout_constraintEnd_toStartOf="@+id/dateTextView"
                app:layout_constraintTop_toBottomOf="@id/merchantLabel"
        />

        <TextView
                android:hint="@string/receipt_date_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dateTextView"
                app:layout_constraintTop_toTopOf="@+id/dateLabel"
                app:layout_constraintBottom_toBottomOf="@+id/dateLabel"
                app:layout_constraintStart_toEndOf="@+id/dateLabel"
                app:layout_constraintHorizontal_weight="2"
                android:text="@{receipt.receipt.date.toString()}"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="@string/receipt_currency_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/currencyLabel"
                app:layout_constraintTop_toBottomOf="@+id/dateLabel" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/currencyTextView"
                app:layout_constraintHorizontal_weight="1"/>
        <TextView
                android:hint="@string/receipt_currency_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/currencyTextView"
                android:text="@{receipt.receipt.currency.currencyCode}"
                app:layout_constraintTop_toTopOf="@+id/currencyLabel"
                app:layout_constraintBottom_toBottomOf="@+id/currencyLabel"
                app:layout_constraintStart_toEndOf="@+id/currencyLabel" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_weight="2"/>

        <ImageView
                android:id="@+id/separator_1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/dashed_line"
                android:layerType="software"
                tools:ignore="ContentDescription"
                app:layout_constraintTop_toBottomOf="@+id/currencyLabel"
                android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@id/separator_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiptItemsList"
                tools:layout_height="200dp"
                tools:layout_editor_absoluteX="20dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
        />

        <ImageView
                android:id="@+id/separator_2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dashed_line"
                android:layerType="software"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteX="20dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/receiptItemsList"/>
        <TextView
                android:hint="@string/receipt_total_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/totalTextView"
                android:text="@{receipt.receipt.total.toString()}"
                app:layout_constraintTop_toTopOf="@+id/totalLabel"
                app:layout_constraintBottom_toBottomOf="@+id/totalLabel"
                app:layout_constraintStart_toEndOf="@+id/totalLabel" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_weight="2"/>
        <TextView
                android:text="@string/receipt_total_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/totalLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/totalTextView"
                app:layout_constraintTop_toBottomOf="@+id/separator_2" android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_weight="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>