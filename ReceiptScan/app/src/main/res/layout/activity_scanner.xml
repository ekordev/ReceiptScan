<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel" type="com.lucianbc.receiptscan.viewmodel.scanner.ScannerViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.activity.ScannerActivity">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scanner_container"
        />

        <ImageButton
                android:src="@drawable/ic_gallery_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scanner_import_btn"
                android:contentDescription="@string/scanner_import_btn"
                android:background="?android:selectableItemBackground"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{() -> viewModel.importImage()}"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

