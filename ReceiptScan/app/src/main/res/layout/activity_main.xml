<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel" type="com.lucianbc.receiptscan.viewmodel.MainViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.activity.MainActivity">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_container"
        />

        <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/bottom_bar"
                app:fabCradleMargin="@dimen/cradle_gap"
                app:fabCradleRoundedCornerRadius="@dimen/cradle_gap"
                app:fabAlignmentMode="center"
                app:elevation="@dimen/elevation_1"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:paddingEnd="16dp"
                    tools:ignore="RtlSymmetry">
                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_drafts_black_24dp"
                        android:contentDescription="@string/nav_drafts_title"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:tint="@{viewModel.isDrafts(viewModel.state) ? @color/colorOnPrimary : @color/colorOnPrimary2}"
                        android:onClick="@{() -> viewModel.toDrafts()}"
                />
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                />

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_receipts_black_24dp"
                        android:contentDescription="@string/nav_receipts_title"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:tint="@{viewModel.isReceipts(viewModel.state) ? @color/colorOnPrimary : @color/colorOnPrimary2}"
                        android:onClick="@{() -> viewModel.toReceipts()}"
                />
            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scan_btn"
                android:src="@drawable/ic_camera_white_24dp"
                app:layout_anchor="@id/bottom_bar"
                app:backgroundTint="@color/colorSecondary"
                app:tint="@color/colorOnSecondary"
        />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
